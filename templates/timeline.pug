section#about.light-gray-bg.pv-20
    div.container
        div.row
            div.col-md-8.col-md-offset-2.text-center.pv-20
                br
                h1.title.large
                    span.text-default About
                    span.margin-left-8 Me

                div.separator
                p.large.trn timeline.description

                // timeline grid start
                div.timeline.margin-clear.clearfix
                    each item, index in timeline
                        div.timeline-item(class=index % 2 == 0 ? "" : "pull-right")

                            div.white-bg.shadow.p-20.text-center.object-non-visible(
                                data-animation-effect="fadeInUpSmall",
                                data-effect-delay="100")

                                div.timeline-date-label.margin-clear.clearfix.width-150.trn= item.period
                                h3.margin-bottom-20.margin-top-28.trn= item.name

                                img.display-inline-block.height-50(src="public/images/logo/" + item.company.icon)

                                a.display-block.margin-top-8(href=item.company.website, target='_blank')
                                    span.font-size-16.trn= item.company.name
                                div.trn=item.company.subtitle

                                div.separator

                                p.trn.text-align-left!= item.description
